{
  "name": "vesper-memory",
  "version": "0.1.0",
  "description": "Production-ready AI memory system for Claude Code - Three-layer architecture with semantic search, knowledge graphs, and intelligent retrieval",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/server.js",
  "bin": {
    "vesper": "dist/cli.js",
    "vesper-server": "dist/server-wrapper.js"
  },
  "files": [
    "dist/",
    "config/",
    "embedding-service/",
    "scripts/",
    "docker-compose.yml",
    ".env.example",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "claude-code",
    "claude",
    "ai-memory",
    "semantic-memory",
    "semantic-search",
    "knowledge-graph",
    "embeddings",
    "rag",
    "retrieval-augmented-generation",
    "vector-database",
    "qdrant",
    "redis",
    "bge-embeddings",
    "typescript",
    "production-ready",
    "enterprise",
    "security",
    "authentication",
    "rate-limiting",
    "monitoring",
    "prometheus",
    "grafana"
  ],
  "author": "David Fitzsimmons",
  "repository": {
    "type": "git",
    "url": "https://github.com/fitz2882/vesper.git"
  },
  "bugs": {
    "url": "https://github.com/fitz2882/vesper/issues"
  },
  "homepage": "https://github.com/fitz2882/vesper#readme",
  "license": "MIT",
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "dev": "node --loader ts-node/esm src/server.ts",
    "build": "tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "benchmark": "vitest run tests/benchmarks/memory-performance.test.ts",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "init:qdrant": "npx tsx scripts/init-qdrant.ts",
    "generate-api-key": "npx tsx scripts/generate-api-key.ts",
    "fresh-install": "./scripts/fresh-install.sh",
    "fresh-install:auto": "./scripts/fresh-install-auto.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@qdrant/js-client-rest": "1.7.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^9.2.2",
    "ioredis": "^5.3.2",
    "prom-client": "^15.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "bintrees": "^1.0.2",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
